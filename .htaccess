# .htaccess - Apache Configuration untuk Warehouse Management

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /warehouse-management/
    
    # Redirect www to non-www (opsional)
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ http://%1/$1 [R=301,L]
    
    # Force HTTPS (uncomment untuk produksi)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # API Routes - redirect clean URLs
    RewriteRule ^api/auth/register$ api/auth.php?action=register [L,QSA]
    RewriteRule ^api/auth/login$ api/auth.php?action=login [L,QSA]
    RewriteRule ^api/auth/logout$ api/auth.php?action=logout [L,QSA]
    RewriteRule ^api/auth/check$ api/auth.php?action=check [L,QSA]
    RewriteRule ^api/auth/forgot-password$ api/auth.php?action=forgot-password [L,QSA]
    RewriteRule ^api/auth/reset-password$ api/auth.php?action=reset-password [L,QSA]
    RewriteRule ^api/auth/activate$ api/auth.php?action=activate [L,QSA]
    
    # Prevent directory listing
    Options -Indexes
    
    # Prevent access to sensitive files
    <FilesMatch "(^\.htaccess|\.sql|composer\.(json|lock)|config\.php)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Content Security Policy (adjust as needed)
    Header set Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval'"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# PHP Settings
<IfModule mod_php7.c>
    # File upload limits
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    
    # Session settings
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 0
    # Set to 1 if using HTTPS: php_value session.cookie_secure 1
    
    # Display errors (set to Off in production)
    php_flag display_errors On
    php_value error_reporting E_ALL
    
    # For production:
    # php_flag display_errors Off
    # php_value error_reporting 0
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Default Document
DirectoryIndex index.html index.php

# Error Pages (customize as needed)
ErrorDocument 403 /403.html
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html